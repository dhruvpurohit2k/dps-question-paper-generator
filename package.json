{
  "name": "dps-question-paper-generator",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "./",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "electron .",
    "electron-pack": "electron-builder --dir",
    "electron-dist-linux": "electron-builder -l",
    "electron-dist-windows": "electron-builder -w",
    "electron-dist-mac": "electron-builder -m"
  },
  "dependencies": {
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "docx": "^9.5.0",
    "electron-is-dev": "^3.0.1",
    "file-saver": "^2.0.5",
    "fs": "^0.0.1-security",
    "react": "^19.1.0",
    "react-compiler-runtime": "^19.1.0-rc.2",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electron-dev": "^1.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.dhruv.dps-question-paper-generator",
    "productName": "DPS Paper Generator",
    "files": [
      "electron-main.js",
      "node_modules/electron-is-dev/**/*",
      "!node_modules/**/*.map",
      {
        "from": "dist",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    }
  }
}
